---
// Destructure the properties from Astro.props
const { url, name, width } = Astro.props;

// Define TypeScript interface for the properties
interface Props {
  url: string;
  name: string;
  width?: "fit" | number;
}
---

<a
  id={url === "/" ? "home" : url.replace("/", "")}
  href={url}
  data-astro-prefetch
  class={"text-nowrap md:text-center min-h-[77px] md:min-h-fit flex items-center justify-center rounded-lg text-2xl font-normal outline-hidden ring-zinc-500 focus-visible:ring-3 md:py-3 lg:text-lg text-current"}
  style={`min-width: ${width}px;`}
>
  {name}
</a>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    let url = window.location.pathname;
    let navId;

    if (url === "/") {
      navId = "home";
    } else {
      navId = url.replace("/", "");
    }

    let nav = document.getElementById(navId);

    if (nav) {
      nav.classList.remove("text-neutral-600", "dark:text-neutral-400", "hover:text-neutral-500", "font-normal");
      nav.classList.add("text-current", " ");
      nav.setAttribute("aria-current", "page");
    }
  });
</script>

---
const { className, position } = Astro.props;

interface Props {
  className?: string;
  position: "top-left" | "top-right" | "bottom-left" | "bottom-right";
}

let positionClass = "";

switch (position) {
  case "top-left":
    positionClass = "top-0 left-0";
    break;
  case "top-right":
    positionClass = "top-0 right-0 md:top-0 md:right-0 rotate-y-180";
    break;
  case "bottom-left":
    positionClass = "bottom-0 left-0 rotate-x-180";
    break;
  case "bottom-right":
    positionClass = "bottom-0 right-0 rotate-x-180 rotate-y-180";
    break;

  default:
    positionClass = "top-0 left-0";
    break;
}
---

<svg
  width="147"
  height="75"
  viewBox="0 0 147 75"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  class={`absolute ${positionClass} ${className} pointer-events-none section-corner`}
  data-position={position}
>

---
import type { IWhyUsItem } from "../landing/WhyUsSection.astro";

const { iconStr, title, description } = Astro.props;

interface Props extends IWhyUsItem {}
---

<div class="flex h-[177px] max-w-[280px] flex-1 flex-col items-center gap-4">
  <div class="min-h-[32px]">
    <Fragment set:html={iconStr} />
  </div>

  <p class="font-helvetica-bold text-center text-xl">{title}</p>
  <p class="font-helvetica-light text-center tracking-wider">{description}</p>
</div>

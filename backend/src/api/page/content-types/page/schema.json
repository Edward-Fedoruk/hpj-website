{
  "kind": "collectionType",
  "collectionName": "pages",
  "info": {
    "singularName": "page",
    "pluralName": "pages",
    "displayName": "Page"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": false,
      "regex": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "sections": {
      "type": "dynamiczone",
      "components": [
        "sections.hero",
        "shared.why-hpj-item",
        "sections.about"
      ]
    },
    "seo_title": {
      "type": "string"
    },
    "seo_description": {
      "type": "string"
    },
    "indexable": {
      "type": "boolean",
      "default": false
    }
  }
}

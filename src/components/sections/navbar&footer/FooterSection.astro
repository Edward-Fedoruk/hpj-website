---
import FooterSocialLink from "@components/ui/links/FooterSocialLink.astro";
import enStrings from "@utils/navigation.ts";
import Icon from "@components/ui/icons/Icon.astro";
import BrandLogoFooter from "@/components/BrandLogoFooter.astro";

const strings = enStrings;

const sectionThreeTitle: string = "Contact Us";
---

<footer class="w-full bg-[#F7F7F7] dark:bg-neutral-900">
  <div class="mx-auto w-full max-w-340 px-4 pt-20 pb-[30px] sm:px-6 sm:py-10 lg:px-10 lg:pt-20">
    <div class="grid grid-cols-2 gap-[30px] md:grid-cols-4 md:lg:grid-cols-4 xl:grid-cols-[355px_1fr_1fr_285px]">
      <div class="col-span-full flex flex-col items-center sm:block md:w-fit lg:col-span-1 xl:w-[355px]">
        <BrandLogoFooter class="order-1 object-cover mix-blend-exclusion" />
        <div
          class="text-gray-90 order-2 mt-[34px] flex justify-center gap-x-5 gap-y-2 sm:flex sm:items-center sm:justify-start sm:gap-y-0 md:order-1 md:mt-[30px] md:gap-[20px]"
        >
          <FooterSocialLink url={strings.socialLinks.facebook}><Icon name="instagram" /> </FooterSocialLink>

          <FooterSocialLink url={strings.socialLinks.facebook}><Icon name="youtube" /> </FooterSocialLink>

          <FooterSocialLink url={strings.socialLinks.facebook}><Icon name="facebook" /> </FooterSocialLink>
        </div>

        <p class="text-primary-text order-1 mt-[30px] text-center font-bold sm:max-w-[343px] sm:text-start">
          We lead with experience, driven by professionalism, and guided by a commitment to lasting success.
        </p>
      </div>
      {
        strings.footerLinks.map((section) => (
          <div class="col-span-1">
            <h3 class="text-primary-text font-bold dark:text-neutral-200">{section.section}</h3>
            <ul class="mt-4 grid space-y-3 md:mt-10">
              {section.links.map((link) => (
                <li class="mb-[13px] md:mb-4">
                  <a
                    href={link.url}
                    class="inline-flex gap-x-2 rounded-lg text-[15px] text-[#5B5F68] ring-zinc-500 outline-hidden transition duration-300 hover:text-neutral-500 focus-visible:ring-3 md:text-base dark:text-neutral-400 dark:ring-zinc-200 dark:hover:text-neutral-300 dark:focus:outline-hidden"
                  >
                    {link.name}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }

      <div class="col-span-2 lg:col-span-1">
        <h3 class="text-primary-text font-bold">
          {sectionThreeTitle}
        </h3>

        <ul class="mt-4 flex flex-col gap-2 text-[15px] text-[#5B5F68] md:mt-10 md:text-base">
          <li class="flex items-center gap-[10px]">
            <Icon name="email" className="min-w-[20px] text-[#373B43]" />
            <a href="mailto:info_general@hpj.ae">info_general@HPJ.AE</a>
          </li>
          <li class="flex items-center gap-[10px]">
            <Icon name="phone" className="min-w-[20px] text-[#373B43]" />
            <a href="tel:+97143622222">+971 4 362 2222</a>
          </li>
          <li class="flex items-center gap-[10px]">
            <Icon name="locationMarker" className="min-w-[20px] text-[#373B43]" />
            <p>Dubai International Financial Centre Authority Level 14, The Gate Building</p>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <div class="w-full">
    <div
      class="mx-auto flex w-full max-w-[85rem] grid-cols-1 flex-col gap-3 px-4 py-4 pt-0 pb-10 text-[#5B5F68] sm:px-6 md:flex md:justify-between md:gap-6 md:py-10 lg:px-10"
    >
      <div class="order-1 mb-1 border-t-[0.5px] border-t-[#999999]"></div>
      <div class="order-1 flex items-center justify-between">
        <p class="text-xs md:text-sm lg:text-base">
          Copyright Â© <span id="current-year">2025</span> HPJ Management Consultancy LLC
        </p>
      </div>

      <ul
        class="order-2 row-start-2 flex flex-wrap justify-between gap-x-6 gap-y-2 text-xs sm:justify-start lg:self-end lg:text-base"
      >
        {
          strings.footerBottomLinks.map((link) => {
            if (link.name !== "Cookie Policy") {
              return (
                <li>
                  <a class="w-fit text-nowrap" href={link.url}>
                    {link.name}
                  </a>
                </li>
              );
            }
            return (
              <li class="hidden sm:block">
                <a class="w-0 text-nowrap sm:w-fit" href={link.url}>
                  {link.name}
                </a>
              </li>
            );
          })
        }
      </ul>

      <script>
        const year = new Date().getFullYear();
        const element = document.getElementById("current-year");
        element!.innerText = year.toString();
      </script>
    </div>
  </div>
</footer>

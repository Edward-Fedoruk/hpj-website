---
const { url } = Astro.props;
interface Props {
  url: string;
}
const linkClass =
  "inline-flex h-[32px] w-[32px] items-center justify-center gap-x-[20px] rounded-lg border border-transparent text-sm font-bold text-neutral-700 outline-hidden ring-zinc-500 hover:bg-neutral-500/10 focus:outline-hidden focus-visible:ring-3 focus-visible:ring-zinc-500 dark:ring-zinc-200 dark:hover:bg-neutral-50/10";
---

<a class={linkClass} href={url} target="_blank" rel="noopener noreferrer">
  <slot />
</a>
